@model Grupa1Ozo.Models.Skladiste

@{
    ViewData["Title"] = "Edit";
}

<h1>Uredi</h1>

<h4>Skladište</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SkladisteId" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LokacijaId" class="control-label"></label>
                <select asp-for="LokacijaId" class="form-control" asp-items="ViewBag.LokacijaId">
                    <option selected disabled>Odaberi lokaciju</option>
                </select>
                <span asp-validation-for="LokacijaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
