@model Grupa1Ozo.Models.Zaposlenici

@{
    ViewData["Title"] = "Izbriši";
}

<h1>Izbriši</h1>

<h3 class="text-danger">Da li ste sigurni da želite izbrisati zaposlenika?</h3>
<div>
    <h4>Zaposlenici</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prezime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opcina.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opcina.Naziv)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ZaposleniciId" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index">Natrag</a>
    </form>
</div>