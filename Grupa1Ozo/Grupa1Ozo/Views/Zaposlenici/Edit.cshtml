@model Grupa1Ozo.Models.Zaposlenici

@{
    ViewData["Title"] = "Uredi";
}

<h1>Uredi</h1>

<h4>Zaposlenici</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ZaposleniciId" />
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpcinaId" class="control-label"></label>
                <select asp-for="OpcinaId" class="form-control" asp-items="ViewBag.OpcinaId">
                    <option selected disabled>Odaber opcinu</option>
                </select>
                <span asp-validation-for="OpcinaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Uredi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag</a>
</div>

@section Scripts{
    @*<script src="~/js/dajMiOpcine.js"></script>*@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}