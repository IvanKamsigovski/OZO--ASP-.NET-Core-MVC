@model cloudscribe.Pagination.Models.PagedResult<Certifikati>

@{
    ViewData["Title"] = "Index";
    ViewData["Controller"] = "Certifikati";
    ViewData["Action"] = "Index";
}

<h1>Certifikati</h1>

<p>
    <a class="btn btn-primary my-1" asp-action="Create">Dodaj novi certifikat</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Naziv
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CertifikatiId">Uredi</a> |
                    <a asp-action="Details" asp-route-id="@item.CertifikatiId">Detalji</a> |
                    <a asp-action="Delete" asp-route-id="@item.CertifikatiId">Izbriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_PaginationPartial" view-data="ViewData" model="Model" />