@model Grupa1Ozo.Models.ZaposleniciCertifikati

@{
    ViewData["Title"] = "Delete";
}

<h1>Izbriši</h1>

<h3>Da li ste sigurni da želite izbrisati certifikat zaposlenika?</h3>
<div>
    <h4>Certifikati zaposlenika</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Certifikati)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Certifikati.Naziv)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Zaposlenici)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zaposlenici.Ime)
        </dd class>
    </dl>
    
    <form asp-action="Delete" asp-route-id1="@Model.ZaposleniciId" asp-route-id2="@Model.CertifikatiId">
        <input type="hidden" asp-for="ZaposleniciId" />
        <input type="hidden" asp-for="CertifikatiId" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index">Natrag</a>
    </form>
</div>
