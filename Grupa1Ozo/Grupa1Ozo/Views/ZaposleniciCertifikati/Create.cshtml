@model Grupa1Ozo.Models.ZaposleniciCertifikati

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj novi</h1>

<h4>Certifikati zaposlenika</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ZaposleniciId" class="control-label"></label>
                <select asp-for="ZaposleniciId" class="form-control" asp-items="ViewBag.ZaposleniciId">
                    <option selected disabled>Odaber zaposlenika</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CertifikatiId" class="control-label"></label>
                <select asp-for="CertifikatiId" class="form-control" asp-items="ViewBag.CertifikatiId">
                    <option selected disabled>Odaber certifikat</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
