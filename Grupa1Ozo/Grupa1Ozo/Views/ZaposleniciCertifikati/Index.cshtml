@model cloudscribe.Pagination.Models.PagedResult<ZaposleniciCertifikati>

@{
    ViewData["Title"] = "Index";
    ViewData["Controller"] = "ZaposleniciCertifikati";
    ViewData["Action"] = "Index";
}

<h1>Certifikati zaposlenika</h1>

<p>
    <a class="btn btn-primary my-1" asp-action="Create">Dodaj novi</a>
</p>
<form asp-controller="ZaposleniciCertifikati" asp-action="Index" method="get">
    Ime: <input class="col-lg-2 my-1 form-control d-inline" type="text" name="searchString" />
    <input class="btn btn-primary" type="submit" value="Traži" />
</form>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                Ime
            </th>
            <th>
                Prezime
            </th>
            <th>
                Certifikati
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Zaposlenici.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zaposlenici.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Certifikati.Naziv)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id1="@item.ZaposleniciId" asp-route-id2="@item.CertifikatiId">Izbriši</a>
                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_PaginationPartial" view-data="ViewData" model="Model" />