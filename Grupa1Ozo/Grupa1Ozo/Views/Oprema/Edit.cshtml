@model Grupa1Ozo.Models.Oprema

@{
    ViewData["Title"] = "Edit";
}

<h1>Uredi</h1>

<h4>Oprema</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OpremaId" />
            <div class="form-group">
                <label asp-for="NazivOpreme" class="control-label"></label>
                <input asp-for="NazivOpreme" class="form-control" />
                <span asp-validation-for="NazivOpreme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Raspolozivost" class="control-label"></label>
                <input asp-for="Raspolozivost" class="form-control" />
                <span asp-validation-for="Raspolozivost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkladisteId" class="control-label"></label>
                <select asp-for="SkladisteId" class="form-control" asp-items="ViewBag.SkladisteId">
                    <option selected disabled>Odaberi skladište</option>
                </select>
                <span asp-validation-for="SkladisteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UslugaId" class="control-label"></label>
                <select asp-for="UslugaId" class="form-control" asp-items="ViewBag.UslugaId">
                    <option selected disabled>Odaberi uslugu</option>
                </select>
                <span asp-validation-for="UslugaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag</a>
</div>

@section Scripts {
    @*<script src="~/js/dajMiOpcine.js"></script>*@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
